<div class="dashboard-banner"  >
  <div class="dashboard-banner-text">
    <h1 class="page-title-entry-title">Search for the services you need!</h1>
    <p class="page-sub-title">A thousand of people are available for helping your life to be better.</p>
  </div>
</div>
<br>
<br>

<div class="container">
  <div class="row">
    <% @services.each do |service| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card-trip">
        <%=link_to service, class: "card-trip" do %>
        <% if service.photo_url.nil? %>
        <%= image_tag "phiver.png"%>
        <%else%>
        <%= cl_image_tag service.photo %>
        <%end%>
        <%end%>
        <div class="card-trip-infos">
          <div>
            <h2><%=link_to service.name, service %></h2>
            <% service.rating_average.to_i.times do  %>
            <i class="fas fa-star"></i>
            <% end %>
          </div>
          <h2>$<%= service.price %>/hour </h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

